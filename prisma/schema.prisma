generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==================== ENUMS ====================

enum Role {
  ADMIN
  DEV
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
}

enum SprintRhythm {
  WEEKLY
  BIWEEKLY
}

enum SprintStatus {
  OPEN
  CLOSED
}

enum TicketStatus {
  READY
  TODO
  IN_PROGRESS
  DONE
  BLOCKED
}

enum BugPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum BugStatus {
  PENDING
  REAL
  FALSE
}

enum NotificationType {
  ASSIGNMENT
  BUG_CRITICAL
  SPRINT_CLOSE
  MENTION
  SYSTEM
}

enum EpicStatus {
  PLANNING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// ==================== MODELS ====================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(DEV)
  projects  Project[]
  bugs      Bug[]
  comments  Comment[]
  meetings  Meeting[]
  activityLogs ActivityLog[]
  retroItems   RetroItem[]
  notifications Notification[]
  assignedProjects ProjectAssignment[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Junction table for project assignments (many-to-many)
model ProjectAssignment {
  id        String   @id @default(cuid())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  
  createdAt DateTime @default(now())
  
  @@unique([projectId, userId])
}

model Project {
  id        String        @id @default(cuid())
  name      String
  startDate DateTime
  endDate   DateTime
  status    ProjectStatus @default(ACTIVE)
  deleted   Boolean       @default(false)
  
  // Relations
  createdBy User     @relation(fields: [userId], references: [id])
  userId    String
  sprints   Sprint[]
  meetings  Meeting[]
  activityLogs ActivityLog[]
  epics   Epic[]
  assignedUsers ProjectAssignment[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sprint {
  id        String       @id @default(cuid())
  name      String?
  rhythm    SprintRhythm
  status    SprintStatus @default(OPEN)
  startDate DateTime
  endDate   DateTime
  
  // Relations
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  tickets   Ticket[]
  bugs      Bug[]
  retroItems RetroItem[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ticket {
  id     String       @id @default(cuid())
  title  String
  status TicketStatus @default(TODO)
  
  // Relations
  sprint   Sprint @relation(fields: [sprintId], references: [id], onDelete: Cascade)
  sprintId String
  bugs     Bug[]
  comments Comment[]
  
  // Optional Epic relation
  epic     Epic?   @relation(fields: [epicId], references: [id], onDelete: SetNull)
  epicId   String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  
  // Relations
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  ticketId  String
  author    User     @relation(fields: [userId], references: [id])
  userId    String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Bug {
  id          String      @id @default(cuid())
  description String
  priority    BugPriority
  evidenceUrl String?
  status      BugStatus   @default(PENDING)
  
  // Relations
  ticket      Ticket? @relation(fields: [ticketId], references: [id], onDelete: SetNull)
  ticketId    String?
  sprint      Sprint  @relation(fields: [sprintId], references: [id], onDelete: Cascade)
  sprintId    String
  reportedBy  User    @relation(fields: [userId], references: [id])
  userId      String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Meeting {
  id        String   @id @default(cuid())
  title     String
  date      DateTime
  notes     String
  nextSteps String?
  attendees String?
  
  // Relations
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  
  createdBy User     @relation(fields: [userId], references: [id])
  userId    String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== NEW PROCESS MODELS ====================

enum ActivityType {
  TICKET
  SPRINT
  PROJECT
  BUG
}

enum ActivityAction {
  CREATE
  UPDATE
  DELETE
  MOVE
  COMMENT
}

enum RetroType {
  POSITIVE
  NEGATIVE
  ACTION
}

model ActivityLog {
  id          String         @id @default(cuid())
  entityType  ActivityType
  entityId    String
  action      ActivityAction
  details     String
  
  // Relations
  project     Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String
  user        User           @relation(fields: [userId], references: [id])
  userId      String

  createdAt   DateTime       @default(now())
}

model RetroItem {
  id        String    @id @default(cuid())
  type      RetroType
  content   String
  
  // Relations
  sprint    Sprint    @relation(fields: [sprintId], references: [id], onDelete: Cascade)
  sprintId  String
  user      User      @relation(fields: [userId], references: [id])
  userId    String

  createdAt DateTime  @default(now())
}

// ==================== ENTERPRISE MODELS ====================

model Notification {
  id        String           @id @default(cuid())
  type      NotificationType
  message   String
  read      Boolean          @default(false)
  entityId  String?
  link      String?

  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  createdAt DateTime         @default(now())
}

model Epic {
  id          String     @id @default(cuid())
  title       String
  description String?
  status      EpicStatus @default(PLANNING)
  dueDate     DateTime?

  project     Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String
  tickets     Ticket[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
